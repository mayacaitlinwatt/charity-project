charity:johnMovingHandling2024 a charity:movingAndHandling ;
    charity:name "Manual handling training" ;
    charity:description "Safe moving and handling techniques" ;
    charity:completedDate "2024-01-10"^^xsd:date ;
    charity:expiryDate "2025-01-10"^^xsd:date ;

@prefix charity: <https://ontology.charity.org.uk/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# the organization
charity:charityOrganization a charity:organization ;
    charity:name "Sample charity" ;
    charity:address "1404 Camden Rd, London N7 0SJ, UK" ;
    charity:providesService charity:playschemes ,
                              charity:afterschoolClubs .

# ===================================================================
# services
# ===================================================================

charity:playschemes a charity:service ;
    charity:name "Playschemes" ;
    charity:description "Holiday and after school enrichment for children" .

charity:afterschoolClubs a charity:service ;
    charity:name "Afterschool clubs" ;
    charity:description "After-school activities for children" .

# ===================================================================
# staff and volunteers
# ===================================================================

charity:john a charity:staff ;
    charity:name "John" ;
    charity:jobTitle "Support worker" ;
    charity:hasTraining charity:johnEpilepsyTraining2024 , charity:johnMovingHandling2024 ;
    charity:deliversService charity:playschemes .

charity:james a charity:volunteer ;
    charity:name "James" ;
    charity:jobTitle "Volunteer support worker" ;
    charity:hasTraining charity:jamesEpilepsyTraining2024 , charity:jamesMovingHandling2024 ;
    charity:deliversService charity:afterschoolClubs .

# ==================================================================
# training instances
# ==================================================================


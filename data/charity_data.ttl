# users
# ===================================================================

charity:mary a charity:user ;
    charity:name "Mary" ;
    charity:receivesService charity:playschemes ;
    charity:hasCondition charity:maryEpilepsy .

# ===================================================================
# conditions
# ===================================================================

# mary
